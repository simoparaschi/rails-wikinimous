<h1>Edit article: <%= @article.title %></h1>


<div class="container">
  <%= form_with model: @article do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit %>
  <% end %>
</div>


<p><%= link_to "Cancel and go back to article", article_path(@article) %></p>
